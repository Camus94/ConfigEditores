{
	// Place your snippets for latex here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"Plantilla general": {
		"prefix": ";pl01",
		"body": [
		  "\\documentclass[12pt,letterpaper]{article}",
		  "",
		  "\\usepackage[spanish]{babel}",
		  "\\usepackage[margin=2.54cm]{geometry}",
		  "\\usepackage{graphicx}",
		  "\\usepackage{setspace}",
		  "\\onehalfspacing",
		  "\\usepackage{fontspec}",
		  "\\usepackage{array}",
		  "",
		  "\\title{$1}",
		  "\\author{Jesús Hernández Moreno}",
		  "\\date{\\today}",
		  "",
		  "\\begin{document}",
		  "$2",
		  "\\end{document}"
		],
		"description": "Plantilla general"
	  },
	  "TablaGeneral": {
		"prefix": ";tab",
		"body": [
		  "    \\begin{tabular}{$1} %Numero y formato de columnas",
		  "        \\hline",
		  "        \\textbf{$2} & \\textbf{} & \\textbf{} & \\textbf{} % Encabezados",
		  "        \\hline \\hline",
		  "        & & &  \\\\",
		  "        & & &  \\\\",
		  "        & & &  \\\\",
		  "        \\hline",
		  "    \\end{tabular}"
		],
		"description": "TablaGeneral"
	  },
	  "Texto en negrita": {
		"prefix": "bf",
		"body": [
		  "\\textbf{$1}$2"
		],
		"description": "Texto en negrita"
	  },
	  "Texto en cursiva": {
		"prefix": "it",
		"body": [
		  "\\textit{$1}$2"
		],
		"description": "Texto en cursiva"
	  },
	  "Texto en versalitas": {
		"prefix": "sc",
		"body": [
		  "\\textsc{$1}$2"
		],
		"description": "Texto en versalitas"
	  },
	  "Glosa negación": {
		"prefix": "nn",
		"body": [
		  "\\textsc{neg}"
		],
		"description": "Glosa negación"
	  },
	  "Cita año": {
		"prefix": "ct",
		"body": [
		  "\\citet{$1}"
		],
		"description": "Cita año"
	  },
	  "Cita paréntesis": {
		"prefix": "cp",
		"body": [
		  "\\citep{$1}"
		],
		"description": "Cita paréntesis"
	  },
	  "Tabla glosa": {
		"prefix": "tt",
		"body": [
		  "\\begin{tabular}{$1}",
		  "($2) &  \\\\\\",
		  "& \\\\\\",
		  "& \\multicolumn{}{l}{``''}",
		  "\\end{tabular} \\vspace{0.5cm}"
		],
		"description": "Tabla glosa"
	  },
	  "Sección no numerada": {
		"prefix": "sec",
		"body": [
		  "\\section*{$1}"
		],
		"description": "Sección no numerada"
	  },
	  "Sin sangría": {
		"prefix": "no",
		"body": [
		  "\\noindent"
		],
		"description": "Sin sangría"
	  },
	  "Separador de celda": {
		"prefix": "yy",
		"body": [
		  "&"
		],
		"description": "Separador de celda"
	  },
	  "Entorno IPA": {
		"prefix": "ipa",
		"body": [
		  "{\\setmainfont{Charis SIL} $1}"
		],
		"description": "Entorno IPA"
	  },
	  "Comenzar entorno": {
		"prefix": "bb",
		"body": [
		  "\\begin{$1}",
		  "$2",
		  "\\end{$1}"
		],
		"description": "Comenzar entorno"
	  },
	  "Cita con color paréntesis": {
		"prefix": "tcp",
		"body": [
		  "\\textcolor{MidnightBlue}{\\citep{$1}}"
		],
		"description": "Cita con color paréntesis"
	  },
	  "Cita con color autor": {
		"prefix": "tct",
		"body": [
		  "\\textcolor{MidnightBlue}{\\citet{$1}}"
		],
		"description": "Cita con color autor"
	  },
	  "Crear cección no numerada": {
		"prefix": "ss",
		"body": [
		  "\\section*{$1}"
		],
		"description": "Crear cección no numerada"
	  },"Espaciado vertical de 05cm": {
		"prefix": "05",
		"body": [
		  "\\vspace{0.5cm}"
		],
		"description": "Espaciado vertical de 05cm"
	  },
	  "Espaciado vertical de 03cm": {
		"prefix": "03",
		"body": [
		  "\\vspace{0.3cm}"
		],
		"description": "Espaciado vertical de 03cm"
	  }
}